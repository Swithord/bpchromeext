{
  "manifest_version": 2,
  "name": "Productivity Redirect",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest", "webRequestBlocking", "*://*.netflix.com/*", "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
